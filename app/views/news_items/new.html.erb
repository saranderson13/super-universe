<div class="new_news_form_wrapper">

    <%= form_with(model: @news_item, url: news_items_path, method: :post, local: true) do |f| %>

        <%= f.label :title, "Title" %>
        <%= f.text_field :title %>

        <%= f.label :description, "Description" %>
        <%= f.text_field :description %>

        <%= f.submit "Add News", data: { disabled_with: false } %>
    <% end %>


</div>