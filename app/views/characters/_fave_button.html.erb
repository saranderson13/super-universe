<% if !current_user.has_faved?(@char.id) && @char.user_id != current_user.id %>
    <%= form_with(url: favorite_opponents_path, method: "post") do |f| %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :character_id, value: @char.id%>
        <%= submit_tag "Fave", class: "fave_submit_button" %>
    <% end %>
<% elsif @char.user_id != current_user.id %>
    <%= form_with(url: favorite_opponent_path, method: "delete") do |f| %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :character_id, value: @char.id%>
        <%= submit_tag "Unfave", class: "unfave_submit_button" %>
    <% end %>
<% end %>