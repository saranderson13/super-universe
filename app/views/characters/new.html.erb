<h1 class="charform_pg_name">NEW CHARACTER</h1>

<% if @char.errors.any? %>
  <ul class='charform_errors_present'>
    <li><%= "errors! oh no!" %></li>
    <% @char.errors.messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class="dynamic_angle"> </div>

<%= form_with(model: @user, url: user_characters_path(@user), method: :post, class: 'char_form', local: true) do |f| %>
  <%= f.fields_for @char do |char_form| %>
    <% render partial: 'form', locals: { char_form: char_form } %>
  <% end %>
  <%= f.submit "Create my Character!", data: { disable_with: false } %>
<% end %>
